from flask import Flask, render_template

app = Flask(__name__)

menu = [
    {"name": "Pizza", "price": "$8.00"},
    {"name": "Burger", "price": "$5.50"},
    {"name": "Pasta", "price": "$7.00"}
]

@app.route('/')
def home():
    return render_template('menu.html', menu=menu)

if __name__ == '__main__':
    app.run(host='0.0.0.0', port=5000)
